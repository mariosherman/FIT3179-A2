{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Children out of school by gender over time",
  "data": {
    "url": "data/combined_out_of_school.csv",
    "format": {"type": "csv"}
  },
  "width": 600,
  "height": 400,
  "title": {
    "text": "Children out of school",
    "subtitle": "The number of children out of school reflects issues like poverty and inequality, leading to missed opportunities for growth and deepening social disparities.",
    "subtitleFontSize": 14
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Children out of school"
    },
    "color": {
      "field": "Gender",
      "type": "nominal",
      "scale": {
        "range": ["#F94144", "#F3722C"]
      },
      "legend": {
        "title": "Gender",
        "orient": "top-right"
      }
    }
  },
  "mark": {
    "type": "bar",
    "tooltip": true
  }
}
