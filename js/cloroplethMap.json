{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Literacy Rates",
  "width": 900,
  "height": 500,
  "data": {
    "url": "data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "mark": {"type": "rect", "fill": "#ceeaff"},
      "encoding": {
        "x": {"value": 0},
        "y": {"value": 0},
        "x2": {"value": 900},
        "y2": {"value": 500}
      }
    },
    {
      "mark": {"type": "geoshape", "stroke": "grey", "strokeWidth": 0.5},
      "data": {
        "graticule": true
      }
    },
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/cross-country-literacy-rates.csv",
              "format": {"type": "csv"}
            },
            "key": "Entity",
            "fields": ["Historical and more recent literacy estimates", "Year"]
          }
        }
      ],
      "selection": {
        "countrySelection": {
          "type": "single",
          "fields": ["properties.NAME"],
          "on": "click",
          "bind": "legend"
        }
      },
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Historical and more recent literacy estimates",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 100],
            "range": ["#fff7bc", "#fec44f", "#d95f0e"]
          },
          "legend": {
            "title": "Literacy Rate (%)",
            "labelFont": "Roboto",
            "labelFontSize": 12,
            "titleFont": "Roboto",
            "titleFontSize": 14,
            "titleColor": "#333",
            "gradientLength": 300,
            "labelColor": "#333"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Historical and more recent literacy estimates", "type": "quantitative", "title": "Literate Population (%)"},
          {"field": "Year", "type": "ordinal", "title": "Last Year Recorded"}
        ],
        "strokeWidth": {
          "condition": {"selection": "countrySelection", "value": 1},   
          "value": 0.5
        },
        "stroke": {
          "condition": {"selection": "countrySelection", "value": "black"},  
          "value": "white"
        }
      }
    }
  ],
  "signals": [
    {
      "name": "selected_country",
      "update": "countrySelection.properties_NAME" 
    }
  ]
}
