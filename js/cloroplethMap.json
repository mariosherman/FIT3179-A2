{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Literacy Rates",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mariosherman/FIT3179-A2/main/data/literate-and-illiterate-world-population.csv",
              "format": {"type": "csv"}
            },
            "key": "Entity",
            "fields": ["Share of population aged 15+ literate", "Year"]
          }
        },
        {
          "filter": {
            "field": "Year",
            "equal": {"param": "selectedYear"}
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Share of population aged 15+ literate",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 100],
            "range": ["#f7fbff", "#6baed6", "#08519c"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Share of population aged 15+ literate", "type": "quantitative", "title": "Literate Population (%)"}
        ]
      }
    }
  ],
  "params": [
    {
      "name": "selectedYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ]
}
