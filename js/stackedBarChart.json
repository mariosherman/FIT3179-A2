{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mariosherman/FIT3179-A2/main/data/literacy-rate-of-young-men-and-women.csv",
    "format": {"type": "csv"}
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "aggregate": "sum",
      "field": "Literacy Rate",
      "type": "quantitative",
      "title": "Literacy Rate (%)"
    },
    "color": {
      "field": "Gender",
      "type": "nominal",
      "scale": {
        "domain": ["Youth Male Literacy Rate (%)", "Youth Female Literacy Rate(%)"],
        "range": ["#1f77b4", "#ff7f0e"]
      },
      "title": "Gender"
    }
  },
  "transform": [
    {
      "fold": ["Youth Male Literacy Rate (%)", "Youth Female Literacy Rate(%)"],
      "as": ["Gender", "Literacy Rate"]
    },
    {
      "filter": "datum.Year >= 2000"
    }
  ]
}
