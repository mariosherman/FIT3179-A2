{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Youth Male vs Female Literacy Rates by Country (2023)",
  "data": {
    "url": "data/literacy-rate-of-young-men-and-women.csv",
    "format": {"type": "csv"}
  },
  "width": 800,
  "height": 600,
  "mark": "point",
  "transform": [
    {
      "filter": "datum.Year == 2023"
    }
  ],
  "encoding": {
    "x": {
      "field": "Youth Female Literacy Rate (%)",
      "type": "quantitative",
      "axis": {"title": "Female Youth Literacy Rate (%)"}
    },
    "y": {
      "field": "Youth Male Literacy Rate (%)",
      "type": "quantitative",
      "axis": {"title": "Male Youth Literacy Rate (%)"}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "legend": {"title": "Continent"}
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "Youth Male Literacy Rate (%)", "type": "quantitative", "title": "Male Youth Literacy Rate (%)"},
      {"field": "Youth Female Literacy Rate (%)", "type": "quantitative", "title": "Female Youth Literacy Rate (%)"},
      {"field": "Population (historical)", "type": "quantitative", "title": "Population"}
    ]
  }
}
